{
    "name": "drewlabs/txn-client",
    "description": "Client Library for making request to txn webservice server using PHP CURL library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\TxnClient\\": "src/",
            "Drewlabs\\Psr7\\": "src/Psr7/src/",
            "Drewlabs\\Curl\\": "src/Curl"
        }
    },
    "autoload-dev": {
        "Drewlabs\\Psr7\\Tests\\": "tests/psr7/",
        "Drewlabs\\Curl\\Tests\\": "tests/curl/"
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "psr/http-client": "^1.0",
        "drewlabs/psr7-stream": "^1.2"
    },
    "require-dev": {
        "donatj/mock-webserver": "^2.5",
        "phpunit/phpunit": "^9.5"
    }
}
