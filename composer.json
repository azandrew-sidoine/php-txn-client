{
  "name": "drewlabs/txn-client",
  "description": "Client Library for making request to txn webservice server using PHP CURL library",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Drewlabs\\TxnClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drewlabs\\TxnClient\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "azandrew-sidoine",
      "email": "asmyns.platonnas29@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^7.0|^8.0",
    "drewlabs/curl-client": "^0.1.4|^0.3.0|^0.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=6.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
